{
  "name": "rebornos-fire",
  "description": "RebornOS Fire",
  "private": true,
  "version": "1.0.0-rc-2",
  "packageManager": "yarn@3.0.0",
  "author": {
    "name": "SoulHarsh007",
    "email": "harshtheking@hotmail.com"
  },
  "license": "GPL-3.0-or-later",
  "repository": {
    "url": "https://gitlab.com/rebornos-team/applications/fire",
    "type": "git"
  },
  "main": "app/index.js",
  "homepage": "https://rebornos.org/",
  "scripts": {
    "dev": "node ./electron-dev.js",
    "build:dist": "yarn build:release && yarn build:package",
    "build:release": "yarn build:all && electron-builder build --linux",
    "build:main": "NODE_ENV=production webpack",
    "build:renderer": "cd renderer && yarn build",
    "build:all": "yarn build:renderer && yarn build:main",
    "build:package": "./builder.sh && yarn build:make",
    "build:make": "makepkg -Ciscf --config ./makepkg.conf",
    "postinstall": "electron-builder install-app-deps"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "dependencies": {
    "@nia3208/centra": "1.0.9-1",
    "bs58": "4.0.1",
    "electron-serve": "1.1.0",
    "node-pty": "0.10.1"
  },
  "devDependencies": {
    "@types/bs58": "4.0.1",
    "electron": "13.1.9",
    "electron-builder": "22.11.7",
    "eslint": "7.32.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jsdoc": "36.0.7",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-security": "1.4.0",
    "node-gyp": "8.1.0",
    "node-loader": "2.0.0",
    "prettier": "2.3.2",
    "webpack": "5.50.0",
    "webpack-cli": "4.8.0"
  },
  "build": {
    "appId": "org.rebornos.fire",
    "productName": "RebornOS Fire",
    "copyright": "Copyright Â© 2021 SoulHarsh007",
    "files": [
      "./resources/icon.png",
      "./app",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "linux": {
      "target": "dir",
      "maintainer": "SoulHarsh007",
      "vendor": "RebornOS",
      "executableName": "fire",
      "icon": "icon.png",
      "category": "Utility",
      "desktop": {
        "Name": "RebornOS Fire",
        "Type": "Application",
        "Terminal": false
      }
    }
  }
}
